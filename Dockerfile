# build stage
FROM node:20.12.2 AS build-stage
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package.json and pnpm-lock.yaml
COPY package.json pnpm-lock.yaml ./

# Install dependencies using pnpm
RUN pnpm install

# Copy the rest of the application code
COPY . .

EXPOSE 3000
CMD ["pnpm", "start"]

